<h1>Edit Game</h1>

<%= form_with model: @game  do |form| %>


  <div>
      <%= form.label :name %><br>
      <%= form.text_field  :name %><br>
      <% @game.errors.full_messages_for(:name).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>


<div>
      <%= form.label :price %><br>
      <%= form.text_field  :price %><br>
      <% @game.errors.full_messages_for(:price).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

<div>
      <%= form.label :platform %><br>
      <%= form.text_field  :platform %><br>
      <% @game.errors.full_messages_for(:platform).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

<div>
      <%= form.label :description %><br>
      <%= form.text_area :description %><br>
      <% @game.errors.full_messages_for(:description).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div>
      <%= form.submit %>
  </div>
<% end %>